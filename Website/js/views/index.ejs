<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>FogMeister</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
    <script>
        function sleep(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }
        async function myFunction() {
            await sleep(5000);
            location.reload();
        }

        window.onload = myFunction;
    </script>
  </head>
  <body>
    <div class="container">
        <% if(display == "Demist"){ %>
            <h1>Your car will need demisting </h1>
            <form action="/" method="post">
              <input type="submit" class="ghost-button" value="Start Demisting Now">
            </form>
        <% } %>
        <% if(display == "AllGood"){ %>
          <h1>Your Car is not fogged up</h1>
        <% } %>
        <% if(display == "Removing"){ %>
          <h1>Your Car is being Demisted</h1>
        <% } %>
    </div>
  </body>
</html>
